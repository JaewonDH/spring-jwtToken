<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwt.mapper.UserMapper">
    <select id="getUserList" resultType="com.jwt.model.User">
        SELECT *
        FROM jwt_user
    </select>
    <insert id="insertUser" useGeneratedKeys="true"  parameterType="com.jwt.model.User">
        INSERT INTO jwt_user (email,password,role,createDate)
        VALUES(
            #{email},
            #{password},
            #{role},
            NOW()
        );
    </insert>

    <select id="getFindByEmail" parameterType="String" resultType="com.jwt.model.User">
        SELECT *
        FROM jwt_user
        where email = #{value}
    </select>
</mapper>